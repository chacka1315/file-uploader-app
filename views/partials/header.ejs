<div class="header">
  <header>
    <a href="/">
      <div class="logo">
        <p>Uploader</p>
        <div><img src="/logo.svg" alt="logo" /></div>
      </div>
    </a>
    <nav>
      <a href="/">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <title>home</title>
          <path d="M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z" />
        </svg>
        Home
      </a>
      <% if (!locals.user) { %>
      <a href="/auth/sign-in" class="login-link">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <title>login</title>
          <path
            d="M11 7L9.6 8.4L12.2 11H2V13H12.2L9.6 15.6L11 17L16 12L11 7M20 19H12V21H20C21.1 21 22 20.1 22 19V5C22 3.9 21.1 3 20 3H12V5H20V19Z"
          />
        </svg>
        Sign in
      </a>
      <% } %>
      <% if (locals.user) { %>
      <a href="/auth/logout" class="logout-link">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <title>logout</title>
          <path
            d="M17 7L15.59 8.41L18.17 11H8V13H18.17L15.59 15.58L17 17L22 12M4 5H12V3H4C2.9 3 2 3.9 2 5V19C2 20.1 2.9 21 4 21H12V19H4V5Z"
          />
        </svg>
        Logout
      </a>
      <div class="user-infos">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          class="user-profile-img"
        >
          <title>account-circle</title>
          <path
            d="M12,19.2C9.5,19.2 7.29,17.92 6,16C6.03,14 10,12.9 12,12.9C14,12.9 17.97,14 18,16C16.71,17.92 14.5,19.2 12,19.2M12,5A3,3 0 0,1 15,8A3,3 0 0,1 12,11A3,3 0 0,1 9,8A3,3 0 0,1 12,5M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12C22,6.47 17.5,2 12,2Z"
          />
        </svg>
        <p class="username"><%= user.firstname %></p>
      </div>

      <% } %>
    </nav>
  </header>
  <hr />
</div>
